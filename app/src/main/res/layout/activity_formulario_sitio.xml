<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioSitio">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/fragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.DashboardFragment">

        <TextView
            android:id="@+id/textView2"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="@string/title_dashboard"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:text="Identificador(id)" />

        <EditText
            android:id="@+id/editTextIDJ"
            style="@style/textField"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:text="Nombre de la exposicion" />

        <EditText
            android:id="@+id/editTextExpoJ"
            style="@style/textField"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:text="Nombre" />

        <EditText
            android:id="@+id/editTextNomJ"
            style="@style/textField"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:text="Es publico" />

        <RadioGroup
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonSJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Si" />

            <RadioButton
                android:id="@+id/radioButtonNJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:text="ArtÃ­culos" />

        <ListView
            android:layout_width="306dp"
            android:layout_height="191dp" />

        <LinearLayout
            android:layout_width="373dp"
            android:layout_height="103dp"
            android:layout_marginStart="1dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonRegistrarJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="Registrar"
                android:textSize="10sp" />

            <Button
                android:id="@+id/buttonActualizarJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="Actualizar"
                android:textSize="10sp" />

            <Button
                android:id="@+id/buttonRegresarJ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:text="Regresar"
                android:textSize="10sp" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>